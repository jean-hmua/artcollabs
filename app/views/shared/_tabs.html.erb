<!-- if owner || collaborator -->
<% if @user_type == :owner || @user_type == :collaborator %>
  
  <!-- TABS LINKS -->
  <div class="tab-container-bts">
    <ul class="nav justify-content-between" id="ProjectsTab" role="tablist">
      <li class="nav-item tab show" id="about-tab" data-toggle="tab">
        <h2><%= link_to "About", "#", class: "tab active nav-link" %></h2>
      </li>
      <li class="nav-item tab" id="timeline-tab" data-toggle="tab">
          <h2><%= link_to "Timeline", "#", class: "tab nav-link" %></h2>
      </li>
      <li class="nav-item tab" id="media-tab" data-toggle="tab">
          <h2><%= link_to "Media", "#", class: "tab nav-link" %></h2>
      </li>
      <li class="nav-item tab" id="chat-tab" data-toggle="tab">
          <h2><%= link_to "Chat", project_chat_path(@project.project_chat), class: "nav-link tab" %></h2>
      </li>
    </ul>
  
    <hr>

    <!-- TAB CONTENTS -->
    <div class="tab-content" id="ProjectsTabContent">

      <!-- ABOUT -->
      <div class="tab-pane fade show active" id="about" role="tabpanel" aria-labelledby="about-tab">
        <!-- ABOUT - OWNER VIEW -->
        <% if @user_type == :owner %>
          <%= render "shared/about_owner" %>
        <!-- ABOUT - COLLABORATOR VIEW -->
        <% elsif @user_type == :collaborator %>
          <%= render "shared/about_collaborator" %>
        <!-- ABOUT - VISITOR VIEW -->
        <% elsif @user_type == :visitor %>
          <%= render "shared/about_visitor" %>
        <% end %>
          
      </div>

      <!-- TIMELINE -->
      <div class="tab-pane fade show active" id="timeline" role="tabpanel" aria-labelledby="timeline-tab">
      
      </div>

      <!-- MEDIA -->
      <div class="tab-pane fade" id="media" role="tabpanel" aria-labelledby="media-tab">
      
      </div>

      <!-- CHAT -->
      <div class="tab-pane fade" id="chat" role="tabpanel" aria-labelledby="chat-tab">
      
      </div>

    </div>

    <script>
      $(function () {
        $('#ProjectsTab li:last-child a').tab('show')
      })
    </script>
<% end %>
    
