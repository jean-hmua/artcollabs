<div class="project-photo">
  <% if @project.photo.attached? %>
    <%= image_tag @project.photo, crop: :mfit %>
  <% end %>
    
</div>

<div class="show-container">

  <h1><%= @project.title %></h1>

  <%= render "shared/chat" %>

        <%= form_for [ @project_chat, @message ], remote: true do |f| %>
        <div class="chat-input-container">
            <%= f.text_field :content, label: false, placeholder: "Message to the Collabs of #{@project.title}", :input_html => {
              :id => "input_message" }, class: "chat-input-text" %>
            <%= submit_tag("Send") %>
        </div>
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <% end %>
      <div id="messages" class="overflow-auto" data-projectchat-id="<%= @project_chat.id %>">
        <% @project_chat.messages.reverse.each do |message| %>
          <%= render "messages/message", message: message  %>
        <% end %>
      </div>

</div>
